{
  "info": {
    "name": "DriveSale API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "health"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "var json = pm.response.json();",
              "pm.test(\"Body has status ok\", function () {",
              "  pm.expect(json.status).to.eql('ok');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "E2E Sale Flow",
      "item": [
        {
          "name": "Create Client",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Cliente Teste\",\n  \"email\": \"cliente.teste+{{randomInt}}@example.com\",\n  \"cpf\": \"{{cpf}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/Clients",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "Clients"
              ]
            }
          },
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "pm.variables.set('randomInt', Math.floor(Math.random()*100000));"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Created 201\", function () { pm.response.to.have.status(201); });",
                  "var json = pm.response.json();",
                  "pm.environment.set(\"clientId\", json.id);",
                  "pm.test(\"Client id captured\", function () { pm.expect(pm.environment.get('clientId')).to.exist; });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Create Vehicle",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"brand\": \"Fiat\",\n  \"model\": \"Uno\",\n  \"year\": 2018,\n  \"color\": \"Prata\",\n  \"price\": 25000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/Vehicles",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "Vehicles"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Created 201\", function () { pm.response.to.have.status(201); });",
                  "var json = pm.response.json();",
                  "pm.environment.set(\"vehicleId\", json.id);",
                  "pm.test(\"Vehicle id captured\", function () { pm.expect(pm.environment.get('vehicleId')).to.exist; });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Get Vehicle by Id",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/Vehicles/{{vehicleId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "Vehicles",
                "{{vehicleId}}"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"OK 200\", function () { pm.response.to.have.status(200); });",
                  "var json = pm.response.json();",
                  "pm.test(\"Vehicle id matches\", function () { pm.expect(json.id).to.eql(pm.environment.get('vehicleId')); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Create Sale",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"vehicleId\": \"{{vehicleId}}\",\n  \"buyerCpf\": \"{{cpf}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/Sales",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "Sales"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Created 201\", function () { pm.response.to.have.status(201); });",
                  "var json = pm.response.json();",
                  "pm.environment.set(\"saleId\", json.id);",
                  "pm.environment.set(\"paymentCode\", json.paymentCode);",
                  "pm.test(\"Sale + payment captured\", function () { pm.expect(pm.environment.get('saleId')).to.exist; pm.expect(pm.environment.get('paymentCode')).to.exist; });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Webhook: payment paid",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"paid\",\n  \"provider\": \"postman\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/webhooks/payments/{{paymentCode}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "webhooks",
                "payments",
                "{{paymentCode}}"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Accepted 202\", function () { pm.response.to.have.status(202); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Get Sale by Id",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/Sales/{{saleId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "Sales",
                "{{saleId}}"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"OK 200\", function () { pm.response.to.have.status(200); });",
                  "var json = pm.response.json();",
                  "pm.test(\"Payment is Paid (1)\", function () { pm.expect(json.payment.status).to.eql(1); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "List Sold Vehicles",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/Vehicles?status=sold",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "Vehicles"
              ],
              "query": [
                { "key": "status", "value": "sold" }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"OK 200\", function () { pm.response.to.have.status(200); });",
                  "var arr = pm.response.json();",
                  "pm.test(\"Sold list contains our vehicle\", function () {",
                  "  const vid = pm.environment.get('vehicleId');",
                  "  pm.expect(arr.some(v => v.id === vid)).to.be.true;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    }
  ]
}

